package com.sist.dao;

import java.util.*;
import org.apache.ibatis.annotations.Select;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Repository;

// 게시판 DAO 따로, 댓글 DAO 따로 만들 예정 ==> DAO가 여러개 ==> @Service
// DAO ==> @Repository
// 일반 클래스 ==> @Component

@Repository
public class DataBoardDAO {
	
	@Autowired
	private DataBoardMapper mapper;
	
	// @Autowired: id 지정 불가. ==> 동일한 class를 가진 bean들을 id로 구분할 수 없다. 
	// ==> @Autowired + @Qualifire("id") OR @Resource("id") 사용 
	// ex) application-datasource.xml에서 <bean id="" class="org.mybatis.spring.mapper.MapperFactoryBean"/>
	
	public List<DataBoardVO> databoardListData(Map map)
	{
		return mapper.databoardListData(map);
	}
	
	public void databoardInsert(DataBoardVO vo)
	{
		mapper.databoardInsert(vo);
	}

	
}







